<h1>Listing Users</h1>
 
<table>
  <tr>
    <th>ID </th>
    <th>Email ğŸ™‰</th>
    <th>Bananas</th>
    <th>Depositar</th>
    <th>Retirar</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <td><%= user.wallet_account.balance.format %></td>
      <td><%= render partial: 'deposits/form', locals: {user: user} %></td>
      <td><%= render partial: 'withdrawals/form', locals: {user: user} %></td>
      <td><%= link_to 'Ver', user_path(user) %></td>
      <td><%= link_to 'Eliminar', user_path(user),
              method: :delete,
              data: { confirm: 'Seguro?' } %></td>
    </tr>
  <% end %>
</table>